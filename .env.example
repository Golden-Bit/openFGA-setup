# =========================
# OpenFGA - environment
# Copia questo file in .env e compila i valori.
# =========================

# Hostname pubblico (solo se pubblichi via Nginx / HTTPS)
OPENFGA_PUBLIC_HOSTNAME=fga.example.com

# --- PostgreSQL (container) ---
POSTGRES_DB=openfga
POSTGRES_USER=openfga
POSTGRES_PASSWORD=CHANGE_ME_STRONG_DB_PASSWORD

# --- OpenFGA server ---
OPENFGA_VERSION=v1.11.2

# Datastore
OPENFGA_DATASTORE_ENGINE=postgres

# Authentication (preshared key)
OPENFGA_AUTHN_METHOD=preshared
OPENFGA_AUTHN_PRESHARED_KEYS=CHANGE_ME_TOKEN_1,CHANGE_ME_TOKEN_2

# Playground (consigliato OFF in produzione)
OPENFGA_PLAYGROUND_ENABLED=false
